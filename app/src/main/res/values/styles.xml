<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F7F7F7</item>
        <item name="colorPrimaryDark">#DCDCDC</item>
        <item name="colorAccent">#AAAAAA</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textColorHint">#BBBBBB</item>
        <item name="android:textColorPrimary">#555555</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Popup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@drawable/lungo_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Popup"/>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/lungoText</item>
        <item name="colorControlActivated">@color/lungoText</item>
    </style>

</resources>
