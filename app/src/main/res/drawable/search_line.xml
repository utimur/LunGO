<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <gradient android:startColor="@color/lungo_start"
                android:endColor="@color/lungo_end"
                android:angle="90"/>
            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="13dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:left="110dp"
        android:right="3dp">
        <rotate android:fromDegrees="-55">
            <shape android:shape="line">
                <stroke android:width="1dp"
                    android:color="@color/lungoTextDark"/>
            </shape>
        </rotate>
    </item>
    <item android:left="114dp"
        android:top="3dp"
        android:bottom="7dp"
        android:right="4dp">
        <shape android:shape="oval"
            android:innerRadius="7dp"
            android:thickness="1dp">
            <stroke android:color="@color/lungoTextDark"
                android:width="1dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>