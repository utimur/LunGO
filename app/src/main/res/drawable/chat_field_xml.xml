<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:right="4dp"
        android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_white"/>
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"/>
        </shape>
    </item>
    <item android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#DDDDDD"
                android:centerColor="#00FFFFFF"
                android:centerX="0.02" />
            <corners android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"/>
        </shape>
    </item>
    <item android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <gradient android:endColor="#DDDDDD"
                android:centerColor="#00FFFFFF"
                android:centerX="0.98" />
            <corners android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"/>
        </shape>
    </item>
    <item android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <gradient android:endColor="#DDDDDD"
                android:centerColor="#00FFFFFF"
                android:centerX="0.99"
                android:angle="-90"/>
            <corners android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/white"
                android:centerColor="#00FFFFFF"
                android:angle="-90"
                android:centerX="0.03"/>
        </shape>
    </item>
</layer-list>