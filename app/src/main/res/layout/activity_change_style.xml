<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_Style_Main_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeStyleActivity"
    android:orientation="vertical"
    android:background="@color/white">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/change_style_layout_Black"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/sett">

        <TextView
            android:id="@+id/textChangeStyleBlack"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Выбрать чёрный стиль"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/change_Image_Black_Style"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/change_Image_Black_Style"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/password" />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/change_style_layout_Orange"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/sett">

        <TextView
            android:id="@+id/textChangeStyleOrange"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Выбрать оранжевый стиль"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/change_Image_Orange_Style"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/change_Image_Orange_Style"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/password" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/change_style_layout_White"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/sett">

        <TextView
            android:id="@+id/textChangeStyleWhite"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Выбрать белый стиль"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/change_Image_White_Style"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/change_Image_White_Style"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/password" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>